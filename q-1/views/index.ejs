<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <div class=" mt-5 shadow p-4 rounded">
            <h2 class="mb-3">File upload example</h2>
            <form method="post" action="/single" enctype="multipart/form-data"
                class="mb-3 d-flex justify-content-center">
                <div class="col-md-11">
                    <label for="formFile" class="form-label">Upload single file</label>
                    <input class="form-control" type="file" name="image" id="formFile">
                </div>
                <div class="align-self-end">
                    <input type="submit" value="Upload" name="submit" class="btn btn-primary mx-2">
                </div>
            </form>
            <form method="post" action="/multi" enctype="multipart/form-data"
                class="mb-3 d-flex justify-content-center">
                <div class="col-md-11">
                    <label for="formFileMultiple" class="form-label">Upload multiple files</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="images" multiple>
                </div>
                <div class="align-self-end">
                    <input type="submit" value="Upload" name="submit" class="btn btn-primary mx-2">
                </div>
            </form>
        </div>
    </div>
    <%if(err){%>
        <div class="container alert alert-danger" role="alert">
            <%=err%>
        </div>
        <%}%>
            <%if(!res){%>
                <div class="container mt-5">
                    <h4>Not uploaded any image yet</h4>
                </div>
                <%}else{%>

                    <%if(res.mark==="multi" ){%>
                        <h5 class="my-4 container">Multiple images</h5>
                        <div class="container my-1 d-flex flex-wrap">
                            <%for(let item of res.path){%>
                                <div class="col-md-3">
                                    <div class="m-3">
                                        <img style="height:200px;width: 300px;" src="<%=item%>" alt="image">
                                    </div>
                                </div>
                                <%}%>
                        </div>
                        <%}else{%>
                            <h5 class="my-4 container">Single image</h5>
                            <div class="container my-1 d-flex ">
                                <div class="col-md-3">
                                    <div class="m-3">
                                        <img style="height:200px;width: 300px;" src="<%=res.path%>" alt="image">
                                    </div>
                                </div>
                            </div>
                            <%}%>
                                <%}%>
</body>
<script src="js/bootstrap.bundle.js"></script>

</html>